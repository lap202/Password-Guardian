             x:Class="Password_Guardian.Views.HomePage"
             Title="HomePage">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"/>
    </Shell.BackButtonBehavior>
    <ScrollView Margin="20">
        <!--Card 1-->
        <VerticalStackLayout>
            <Image
                Source="thevault.png"
                SemanticProperties.Description="AI generated vault"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label 
            Text="The Vault"
            FontSize="Header"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Border x:Name="card1"
                IsVisible="false"
                WidthRequest="380"
                HeightRequest="215"
                Stroke="purple"
                BackgroundColor="Black"
                StrokeThickness="4"
                StrokeShape="RoundRectangle 10 60"
                Margin="10">
                <Border.Shadow>
                    <Shadow Brush="Purple"
                        Offset="8,8"
                        Opacity=".8"/>

                </Border.Shadow>

                <VerticalStackLayout>
                    <HorizontalStackLayout
                        HorizontalOptions="Center">
                    <Label
                    x:Name="lblPasscardName1"
                    Text="#PASSCARD NAME"
                    FontSize="Default"
                    Margin="13"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />

                    <Button
                    x:Name="Card1DeleteBtn"
                        IsVisible="false"
                    Text="Delete Card"
                    TextColor="Red"
                    HeightRequest="40"
                        MaximumHeightRequest="34"
                        MinimumHeightRequest="30"
                    WidthRequest="110"
                    Margin="6"
                    SemanticProperties.Hint="Delete"
                    Clicked="Card1DeleteBtn_Clicked"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Entry x:Name="txtUsernameBox1"
               Text="#PASSCARD USERNAME"
               TextColor="White"
               IsEnabled="False"
               WidthRequest="250"
                      Margin="2"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

                    <Entry x:Name="txtPasswordBox1"
               Text="#PASSCARD PASSWORD"
               TextColor="White"
               IsEnabled="False"
               IsPassword="True"
               WidthRequest="250"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

                    <HorizontalStackLayout
                        x:Name="Card1DefaultBtns"
                    HorizontalOptions="Center">
                        <Button
                    x:Name="viewPasswordBtn"
                    Text="View"
                    HeightRequest="15"
                    WidthRequest="100"
                    Margin="8"
                    SemanticProperties.Hint="View"
                    Clicked="viewPasswordBtn_Clicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                        <Button
                    x:Name="copyToClipboardBtn"
                    Text="Copy"
                    HeightRequest="15"
                    WidthRequest="100"
                    Margin="8"
                    SemanticProperties.Hint="Copy"
                    Clicked="copyToClipboardBtn_Clicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                        <Button
                    x:Name="EditCard1Btn"
                    Text="Edit"
                    HeightRequest="15"
                    WidthRequest="100"
                    Margin="8"
                    SemanticProperties.Hint="Copy"
                    Clicked="EditCard1Btn_Clicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                    </HorizontalStackLayout>
                    <HorizontalStackLayout
                        x:Name="Card1EditButtons"
                        IsVisible="false"
                    HorizontalOptions="Center">

                        <Button
                    x:Name="view2PasswordBtn"
                    Text="View"
                    HeightRequest="15"
                    WidthRequest="100"
                    Margin="8"
                    SemanticProperties.Hint="View"
                    Clicked="viewPasswordBtn_Clicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                        
                        <Button
                    x:Name="Card1CancelEditBtn"
                    Text="Cancel"
                    HeightRequest="15"
                    WidthRequest="100"
                    Margin="8"
                    SemanticProperties.Hint="View"
                    Clicked="CancelEditBtn_Clicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                        <Button
                    x:Name="Card1SaveEditBtn"
