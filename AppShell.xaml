<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Password_Guardian.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Password_Guardian"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Password Guardian"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <MenuItem
        x:Name="AddNewPasswordBtn"
        Text="Add New Password"
        Clicked="AddNewPasswordBtn_Clicked"/>

    <MenuItem
        x:Name="LogoutBtn"
        Text="Log Out"
        Clicked="LogoutBtn_Clicked"/>

    <MenuItem
        x:Name="DeleteAccount"
        Text="Delete Account"
        Clicked="DeleteAccount_Clicked"/>

</Shell>
